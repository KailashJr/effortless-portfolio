{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./components/*"],
			"@configs/*": ["./configs/*"],
			"@data/*": ["./data/*"],
			"@lib/*": ["./lib/*"],
			"@pages/*": ["./pages/*"],
			"@styles/*": ["./styles/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/help.mdx"],
	"exclude": ["node_modules"]
}
